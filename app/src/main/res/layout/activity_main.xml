<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:tint="@android:color/white"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/takePic_btn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorPrimary"
        android:drawableBottom="@mipmap/take111"
        android:paddingTop="70dp"
        android:paddingBottom="50dp"
        android:text="@string/take"
        android:textColor="@color/white"


        app:layout_constraintBottom_toTopOf="@+id/uploadPic_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/uploadPic_btn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorPrimaryDark"
        android:drawableBottom="@mipmap/up"
        android:paddingTop="70dp"
        android:paddingBottom="50dp"
        android:text="@string/upload"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/takePic_btn" />

</android.support.constraint.ConstraintLayout>