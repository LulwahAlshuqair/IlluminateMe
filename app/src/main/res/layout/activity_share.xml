<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:weightSum="3"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/btn_twitter"
        android:background="@drawable/roundcornert"
        android:padding="5dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/tw"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="top"
        />


    <ImageButton
        android:id="@+id/btn_inst"
        android:background="@drawable/roundcorneri"
        android:padding="4dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/ins"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        />

    <ImageButton
        android:id="@+id/btn_whats"
        android:background="@drawable/roundcornerw"
        android:padding="4dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/wh"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="top"
        />



</LinearLayout>